    <audio id="siren" loop>
        <source src="https://www.soundjay.com/mechanical/sounds/siren-1.mp3" type="audio/mpeg">
    </audio>

    <script>
        let prg = 0;
        let isStarted = false;
        const matrix = document.getElementById('matrix');
        const siren = document.getElementById('siren');

        function init() {
            if (isStarted) return;
            isStarted = true;
            document.getElementById('overlay').style.display = 'none';
            siren.play();
            startMatrix();
            startLoading();
            if (document.documentElement.requestFullscreen) document.documentElement.requestFullscreen();
        }

        function startMatrix() {
            setInterval(() => {
                matrix.innerHTML += Math.random().toString(36).substring(2, 4) + " ";
                if(matrix.innerHTML.length > 1200) matrix.innerHTML = "";
            }, 50);
        }

        function startLoading() {
            const steps = ["Обход защиты...", "Инъекция кода...", "Доступ к камере...", "Копирование Telegram...", "Финальный дамп..."];
            const timer = setInterval(() => {
                prg += 1;
                document.getElementById('progress-bar').style.width = prg + "%";
                document.getElementById('scan-details').innerText = steps[Math.floor(prg / 20)] || "Завершение...";
                if(prg >= 100) {
                    clearInterval(timer);
                    document.getElementById('loading-screen').style.display = 'none';
                    document.getElementById('main-alert').style.display = 'block';
                    if(navigator.vibrate) navigator.vibrate([1000, 200, 1000]);
                }
            }, 100);
        }

        function scareMore() {
            // Скачиваем фейковый лог
            const blob = new Blob(["RAT_STATUS: ACTIVE\nTARGET: REDMI_C11\nDATA_EXPORT: COMPLETED"], {type: 'text/plain'});
            const a = document.createElement('a');
            a.href = URL.createObjectURL(blob);
            a.download = "SYSTEM_EXPLOIT_LOG.txt";
            a.click();

            // Вместо бесконечного цикла — серия алертов через интервал
            let count = 0;
            const interval = setInterval(() => {
                alert("CRITICAL_ERROR: SYSTEM_OVERRIDE");
                count++;
                if (count > 10) clearInterval(interval); // Остановится через 10 окон, чтобы телефон не сдох
            }, 500);
        }
    </script>
